{
  "expo": {
    "name": "3d-character-rotate",
    "slug": "3d-character-rotate",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "3dcharacterrotate",
    "userInterfaceStyle": "automatic",

    "platforms": ["ios"],

    "newArchEnabled": true,

    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "To create or update your Ready Player Me avatar from a selfie.",
        "NSMicrophoneUsageDescription": "Microphone access may be used by the avatar creator."
      }
    },

    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-asset"
    ],

    "experiments": {
      "typedRoutes": true
    }
  }
}
